#!/usr/bin/env ruby

require_relative '../config/environment'
puts "Welcome to Tic-Tac-Toe!"

def start 
  puts "How many players? (0, 1 or 2)"
  input = gets.strip
  case = input
  when "0"
  Game.new(Players::Computer.new("X"), Game.new(Players::Computer.new("O")).play 
  puts "Would you like to play again?
  play_again
  when "1"
  Game.new(Players::Human.new("X"), Game.new(Players::Computer.new("O")).play 
  puts "Would you like to play again?
  play_again
   when "2"
  Game.new(Players::Human.new("X"), Game.new(Players::Human.new("O")).play 
  puts "Would you like to play again?
  play_again
end